<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:launchMode="singleTop"
    android:background="@drawable/image_back"
    tools:context=".PersonalPlace"
    >

    <ImageButton
        android:id="@+id/imageButton_Portrait"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="30dp"
        android:background="#00000000"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/FixPassword_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside"
         />

    <TextView
        android:id="@+id/UserName_Text"
        android:layout_width="183dp"
        android:layout_height="49dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:text="UserName"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.402"
        app:layout_constraintStart_toEndOf="@+id/imageButton_Portrait"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/FixPassword_button"
        android:layout_width="412dp"
        android:layout_height="54dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#22029A8C"
        android:gravity="left"
        android:text=" 修改密码"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton_Portrait" />

    <Button
        android:id="@+id/ChangeNickName_button"
        android:layout_width="412dp"
        android:layout_height="58dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#22029A8C"
        android:gravity="left"
        android:text=" 修改昵称"

        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FixPassword_button" />

    <Button
        android:id="@+id/About_button"
        android:layout_width="412dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#22029A8C"
        android:gravity="left"
        android:text=" 关于我们"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ChangeNickName_button" />

    <Button
        android:id="@+id/LogOut_button"
        android:layout_width="121dp"
        android:layout_height="52dp"
        android:layout_marginStart="144dp"
        android:layout_marginLeft="144dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#03A9F4"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/About_button" />

    <Button
        android:id="@+id/HomePage_button"
        android:layout_width="205dp"
        android:layout_height="58dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#22029A8C"
        android:text="主页"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/PersonalPlace_button"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/About_button"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/PersonalPlace_button"
        android:layout_width="205dp"
        android:layout_height="58dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#22029A8C"
        android:text="个人中心"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/HomePage_button"
        app:layout_constraintTop_toBottomOf="@+id/About_button"
        app:layout_constraintVertical_bias="1.0" />




</androidx.constraintlayout.widget.ConstraintLayout>