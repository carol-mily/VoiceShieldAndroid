<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/userImage"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ppp" />

        <TextView
            android:id="@+id/userFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/userImage"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="5dp"
            android:text="default_name"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/upload_back"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/download_record"
            android:layout_marginRight="2dp"
            android:layout_marginTop="15dp"
            android:text="回复" />

        <Button
            android:id="@+id/download_record"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/play_record"
            android:layout_marginRight="2dp"
            android:layout_marginTop="15dp"
            android:text="下载" />

        <Button
            android:id="@+id/play_record"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dp"
            android:layout_marginTop="15dp"
            android:text="播放" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>